@model WebApplication4.Models.AuthModel

@{
    ViewData["Title"] = "Auth";
}
<center>
    <h4>Welcome</h4>
    <hr />
</center>
<div class="row justify-content-center">

    <div class="col-md-4">
        @Html.ValidationMessage("CustomError", new { @class = "text-danger center" })        
        <form asp-action="Auth">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign in" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

