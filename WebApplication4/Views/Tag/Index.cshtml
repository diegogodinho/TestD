@{
    ViewData["Title"] = "Tags";
}

@section Head{
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-1 col-lg-offset-11">
        <a asp-controller="Tag" asp-action="Create" class="btn btn-primary">New </a>
        <span class="spacing"></span>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="fa fa-table"></i>
                    Tags
                </h3>
            </div>
            <div class="box-content nopadding">

                <table class="table table-striped table-bordered" id="tableTags" width="100%">
                    <thead>
                        <tr role="row">

                            <th>Name</th>
                            <th>Checked</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
@section Scripts{

    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script type="text/javascript">
        $(function () {
            $('#tableTags').dataTable({
                ajax: '/tag/GetTagsJson',
                "searching": false,
                "serverSide": true,
                "columns": [
                    { "data": "name" },
                    { "data": "checked" },
                    {
                        "data": "weblink",
                        "render": function (data, type, row, meta) {

                            if (row.checked) {

                                /**/
                                data = '<a href="#" class="edit" data-id="' + row.id + '" method="post" >UnCheck</a>';
                                /**/
                            }
                            else {
                                data = '<a href="#" class="edit" data-id="' + row.id + '" method="post" >Check</a>';
                            }
                            return data;
                        }
                    }
                ]
            });

            $("#tableTags").on('draw.dt', function () {
                $('.edit').click(function () {
                    debugger;

                    $.ajax({
                        url: '/Tag/UpdateTag',
                        method: 'post',
                        dataType: 'json',
                        data: {
                            idTag: $(this).data("id"),
                        },
                        success: function (data) {
                            debugger;
                        },
                        error: function (data) {
                            debugger;
                        }
                    });


                });
            });


        });
    </script>
}