@{
    ViewData["Title"] = "Tags";
}

@section Head{
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="https://codeseven.github.io/toastr/build/toastr.min.css" rel="stylesheet" />
}
<br />
<div class="row">
    <div class="col-12">
        <a asp-controller="Tasks" asp-action="Create" class="btn btn-primary">New Task</a>
        <span class="spacing"></span>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12 ">
        <div class="box box-color box-bordered">
            <div class="box-title text-center">
                <h3>
                    <i class="fa fa-table"></i>
                    Tasks Lists
                </h3>
            </div>
            <div class="box-content nopadding">

                <table class="table table-striped table-bordered" id="tableTags" width="100%">
                    <thead>
                        <tr role="row">
                            <th>Is checked</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script src="https://codeseven.github.io/toastr/build/toastr.min.js "></script>
    <script type="text/javascript">
        var dataTable;
        $(function () {
            dataTable = $('#tableTags').dataTable({
                ajax: '/Tasks/GetTagsJson',
                "searching": false,
                "serverSide": true,
                "columns": [
                    {
                        "data": "weblink",
                        "render": function (data, type, row, meta) {
                            if (row.checked) {
                                data = '<a href="#" class="updatestatus" data-id="' + row.id + '" method="post" ><input type="checkbox"  checked="checked"></input></a>';
                            }
                            else {
                                data = '<a href="#" class="updatestatus" data-id="' + row.id + '" method="post" ><input type="checkbox" </input></a>';
                            }
                            return data;
                        }
                    },
                    { "data": "name" },
                    {
                        "data": "weblink",
                        "render": function (data, type, row, meta) {
                            debugger;
                            var url = '@Url.Action("Edit", "Tasks")';
                            data = '<a href="#" class="edit" data-id="' + row.id + '" method="post" >Delete</a> | <a href="'+url +'/' +row.id + '" >Details</a>';
                            return data;
                        },
                        className: 'dt-body-center'
                    }
                ]
            });

            $("#tableTags").on('draw.dt', function () {
                $('.updatestatus').click(function () {
                    $.ajax({
                        url: '/Tasks/UpdateTask',
                        method: 'post',
                        data: {
                            idTag: $(this).data("id"),
                        },
                        success: function (data) {
                            dataTable.api().ajax.reload();
                            toastr.success("Item Updated!");
                        },
                        error: function (data) {
                            toastr.error("Error occured, Please contact the administrator");
                        }
                    });
                });
            });
        });
    </script>
}